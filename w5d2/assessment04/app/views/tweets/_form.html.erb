<form action="<%= url %>" method="post">
  <%= render "shared/form_auth_token" %>
  <input type="hidden" name="_method" value="<%= hidden_method %>">
  <label>Title:
    <input type="text" name="tweet[title]" value="<%= tweet.title %>">
  </label>
  <br>
  <label>Body:
    <input type="text" name="tweet[body]" value="<%= tweet.body %>">
  </label>
  <br>
  <br>
  <input type="submit" value="<%= submit_text %>">
</form>
